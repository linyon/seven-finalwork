@model List<WebApplication1.Models.Album>
@{
    ViewBag.Title = "Index";
    Layout = "/Views/Shared/Layout.cshtml";
}
<!-- First Container -->
<div class="container-fluid bg-2 text-center">
    <a href="~/Album/Create" class="btn btn-default btn-lg">
        <span class="glyphicon glyphicon-pencil"></span> write a post
    </a>
</div>
@**@
<!-- Button trigger modal -->



<!-- Second Container -->
<div class="container-fluid bg-4 text-center">
    <div class="row text-center">
        @for (var i = 0; i < Model.Count; i++)
        {
            <div class="col-sm-4">
                <div class="thumbnail">
                    <img src="@Model[i].ImageUrl" alt="@Model[i].ImageUrl" width="500" height="400">
                    <p style="color:black"><strong>@Model[i].Number</strong></p>
                    <p style="color:black">@Model[i].Title</p>
                    @*@<button type="button" data-toggle="modal" data-target="#@Model[i].ID">
                        <span class="glyphicon glyphicon-circle-arrow-right"></span>enter
                    </button>*@
                    <button type="button" class="btn btn-primary btn" data-toggle="modal" data-target="#@Model[i].ID">
                        <span class="glyphicon glyphicon-circle-arrow-right"></span>enter
                    </button>
                    <!-- Modal -->
                    <div class="modal fade" id="@Model[i].ID" tabindex="-1" role="dialog" aria-labelledby="@Model[i].ID" style="color:black">
                        <div class="modal-dialog" role="document">
                            <div class="modal-content">
                                <div class="modal-header">
                                    <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                                    <h4 class="modal-title" id="@Model[i].ID">@Model[i].Title</h4>
                                </div>
                                <div class="modal-body">
                                   @Model[i].Content
                                </div>
                                <div class="modal-fixed-footer">
                                    <a class="btn btn-primary" href="~/Album/Update/@Model[i].ID">Update</a>
                                    <a class="btn btn-danger" href="~/Album/Delete/@Model[i].ID">Delete</a>
                                </div>
                            </div>
                        </div>
                    </div>

                    @*<a class="btn btn-primary" href="~/Album/Update/@Model[i].ID">編輯</a>
    <a class="btn btn-danger" href="~/Album/Delete/@Model[i].ID">刪除</a>*@
                </div>
            </div>     
        }
    </div>
   
</div>
<!-- Footer -->
<footer class="container-fluid bg-1 text-center">
    <p>Bootstrap Theme Made By <a href="http://www.w3schools.com">www.w3schools.com</a></p>
</footer>

