@model List<WebApplication1.Models.Album>
@{
    ViewBag.Title = "Index";
    Layout = "/Views/Shared/Layout.cshtml";
}

<div class="container-fluid bg-2 text-center">
    <a href="~/Album/Create" class="btn btn-default btn-lg">
        <span class="glyphicon glyphicon-pencil"></span> write a post
    </a>
</div>

    <div class="container-fluid bg-4 text-center">
        <div class="row container-fluid ">
            @for (var i = 0; i < Model.Count; i++)
            {
                <div class="col-sm-4">
                    <button class="thumbnail" data-toggle="modal" data-target="#@Model[i].ID">
                        <div class="img">
                            <img class="cut" src="@Model[i].ImageUrl" alt="@Model[i].ImageUrl" >
                        </div>
                            <p style="color:black"><strong>@Model[i].Number</strong></p>
                            <p style="color:black">@Model[i].Title</p>
                    </button>
                    <!-- Modal -->
                    <div class="modal fade" id="@Model[i].ID" role="dialog" style="color:black">
                        <div class="modal-dialog" role="document">
                            <div class="modal-content">
                                <div class="modal-header">
                                    <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                                    <h4 class="modal-title" id="@Model[i].ID">@Model[i].Title</h4>
                                </div>
                                <div class="modal-body">
                                    @Model[i].Content
                                </div>
                                <div class="modal-body">
                                    <img src="@Model[i].ImageUrl" alt="@Model[i].ImageUrl" width="500">
                                </div>
                                <div class="modal-fixed-footer">
                                    <a class="btn btn-primary" href="~/Album/Update/@Model[i].ID">Update</a>
                                    <a class="btn btn-danger" href="~/Album/Delete/@Model[i].ID">Delete</a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>

    </div>


    <!-- Footer -->
    <footer class="container-fluid bg-1 text-center">
        <p>Bootstrap Theme Made By <a href="http://www.w3schools.com">www.w3schools.com</a></p>
    </footer>

